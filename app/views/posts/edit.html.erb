<h1 class="text-center">修改文章</h1>
<h3 class="text-center"><%= @post.group.title%></h3>
<div class="col-md-4 col-md-offset-4">
	<%= simple_form_for [@post.group,@post] do |f| %>
		<div class="form-group">
			<%= f.input :content, input_html: {class: "form-control"}%>
		</div>
		<div class="form-actions">
			<%= f.submit "Submit", data:{disable_with: "Submitting..."}, class: "btn btn-primary"%>
		</div>
	<% end %>
</div>
